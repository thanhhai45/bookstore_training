<div id="<%= dom_id book %>">
  <p>
    <strong>Title:</strong>
    <%= book.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= book.description %>
  </p>

  <p>
    <strong>Published at:</strong>
    <%= book.published_at %>
  </p>

  <p>
    <strong>Author:</strong>
    <%= book.author_id %>
  </p>

  <p>
    <strong>Book publisher:</strong>
    <%= book.book_publisher %>
  </p>

  <p>
    <strong>Issue version:</strong>
    <%= book.issue_version %>
  </p>

</div>
